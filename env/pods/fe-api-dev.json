{
  "kind": "Pod",
  "apiVersion": "v1",
  "metadata": {
    "name": "fe-api-dev",
    "labels": {
      "tier": "frontend",
      "role": "api",
      "env": "dev"
    }
  },
  "spec": {
    "containers": [
      {
        "name": "api-server",
        "image": "gophr-fe-api:dev",
        "volumeMounts": [
          {
            "name": "api-src",
            "mountPath": "/go/src/app"
          }
        ],
        "ports": [
          {
            "containerPort": 80
          }
        ],
        "livenessProbe": {
          "httpGet": {
            "path": "/status",
            "port": 80
          },
          "initialDelaySeconds": 30,
          "timeoutSeconds": 1
        }
      }
    ],
    "volumes": [
      {
        "name": "api-src",
        "hostPath": {
          "path": "/opt/gophr/frontend/api"
        }
      }
    ]
  }
}
