#! /bin/bash

# Paths
bin_dir="$( dirname $( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd ))"

# Color variables
esc_seq="\x1b["
no_color=$esc_seq"39;49;00m"
green_color=$esc_seq"32;01m"

echo "Installing gophrctl..."
sudo ln -s "$bin_dir/gophrctl" /usr/local/bin/gophrctl && \
sudo chown $USER /usr/local/bin/gophrctl && \
echo -e "${green_color}âœ“ Installed gophrctl successfully!${no_color}"
