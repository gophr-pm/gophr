#! /bin/bash

# Constants
dev_bin_dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
infra_dir="$( dirname $( dirname $dev_bin_dir ) )"

$infra_dir/images/dev/db/bin/build      && $infra_dir/images/dev/db/bin/run
$infra_dir/images/dev/api/bin/build     && $infra_dir/images/dev/api/bin/run
$infra_dir/images/dev/router/bin/build  && $infra_dir/images/dev/router/bin/run
$infra_dir/images/dev/ws/bin/build      && $infra_dir/images/dev/ws/bin/run
